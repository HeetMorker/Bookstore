<!DOCTYPE html><html lang="en"><head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="description" content="Theta is a bootstrap &amp; laravel admin dashboard template">
  <meta name="keywords" content="admin, admin dashboard, admin panel, admin template, analytics, bootstrap 4, crm, laravel admin, responsive, sass support, ui kits">
  <meta name="author" content="Themesbox17">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
  <title>Book Store</title>
  <!-- Switchery css -->
  <link href="/css/bootstrap.min.css" rel="stylesheet" type="text/css">
  <link href="/css/icons.css" rel="stylesheet" type="text/css">
  <link href="/css/flag-icon.min.css" rel="stylesheet" type="text/css">
  <link href="/css/style.css" rel="stylesheet" type="text/css">
  <!-- End css -->
</head>
<body class="vertical-layout">

  <!-- Start Containerbar -->
  <div id="containerbar">
      <!-- Start Leftbar -->
      <div class="leftbar">
          <!-- Start Sidebar -->
          <div class="sidebar">
              <!-- Start Logobar -->
              <div class="logobar">
                  <a href="index.html" class="logo logo-large"><img src="/images/logo.svg" class="img-fluid" alt="logo"></a>
                  <a href="index.html" class="logo logo-small"><img src="/images/small_logo.svg" class="img-fluid" alt="logo"></a>
              </div>
              <!-- End Logobar -->
              <!-- Start Navigationbar -->
              <div class="navigationbar">
                  <ul class="vertical-menu">
                      <li class="vertical-header">Main</li>
                      <li>
                          <a href="javaScript:void();">
                            <img src="/images/svg-icon/dashboard.svg" class="img-fluid" alt="dashboard"><span>Dashboard</span>
                          </a>
                      </li>
                      <li>
                          <a href="javaScript:void();">
                            <img src="/images/svg-icon/pages.svg" class="img-fluid" alt="dashboard"><span>Add Books</span>
                          </a>
                      </li>                         
                  </ul>
              </div>
              <!-- End Navigationbar -->
          </div>
          <!-- End Sidebar -->
      </div>
      <!-- End Leftbar -->
      <!-- Start Rightbar -->
      <div class="rightbar">
          <!-- Start Topbar Mobile -->
          <div class="topbar-mobile">
              <div class="row align-items-center">
                  <div class="col-md-12">
                      <div class="mobile-logobar">
                          <a href="index.html" class="mobile-logo"><img src="/images/logo.svg" class="img-fluid" alt="logo"></a>
                      </div>
                      <div class="mobile-togglebar">
                          <ul class="list-inline mb-0">
                              <li class="list-inline-item">
                                  <div class="topbar-toggle-icon">
                                      <a class="topbar-toggle-hamburger" href="javascript:void();">
                                          <img src="/images/svg-icon/horizontal.svg" class="img-fluid menu-hamburger-horizontal" alt="horizontal">
                                         <img src="/images/svg-icon/verticle.svg" class="img-fluid menu-hamburger-vertical" alt="verticle">
                                       </a>
                                   </div>
                              </li>
                              <li class="list-inline-item">
                                  <div class="menubar">
                                      <a class="menu-hamburger" href="javascript:void();">
                                         <img src="/images/svg-icon/collapse.svg" class="img-fluid menu-hamburger-collapse" alt="collapse">
                                         <img src="/images/svg-icon/close.svg" class="img-fluid menu-hamburger-close" alt="close">
                                       </a>
                                   </div>
                              </li>                                
                          </ul>
                      </div>
                  </div>
              </div>
          </div>
          <!-- Start Topbar -->
          <div class="topbar">
              <!-- Start row -->
              <div class="row align-items-center">
                  <!-- Start col -->
                  <div class="col-md-12 align-self-center">
                      <div class="togglebar">
                          <ul class="list-inline mb-0">
                              <li class="list-inline-item">
                                  <div class="menubar">
                                      <a class="menu-hamburger" href="javascript:void();">
                                         <img src="/images/svg-icon/collapse.svg" class="img-fluid menu-hamburger-collapse" alt="collapse">
                                         <img src="/images/svg-icon/close.svg" class="img-fluid menu-hamburger-close" alt="close">
                                       </a>
                                   </div>
                              </li>
                              <li class="list-inline-item">
                                  <div class="searchbar">
                                      <form>
                                          <div class="input-group">
                                            <input type="search" class="form-control" placeholder="Search" aria-label="Search" aria-describedby="button-addon2">
                                            <div class="input-group-append">
                                              <button class="btn" type="submit" id="button-addon2"><img src="/images/svg-icon/search.svg" class="img-fluid" alt="search"></button>
                                            </div>
                                          </div>
                                      </form>
                                  </div>
                              </li>
                          </ul>
                      </div>
                  </div>
                  <!-- End col -->
              </div> 
              <!-- End row -->
          </div>
          <!-- End Topbar -->
          <!-- Start Breadcrumbbar -->                    
          <div class="breadcrumbbar">
              <div class="row align-items-center">
                  <div class="col-md-8 col-lg-8">
                      <h4 class="page-title">Add Books</h4>
                  </div>
              </div>          
          </div>
          <!-- End Breadcrumbbar -->
          <!-- Start Contentbar -->    
          <div class="contentbar">
              <!-- Start row -->
              <div class="row justify-content-center">
                  <!-- Start col -->
                  <div class="col-lg-12">
                      <div class="card m-b-30">
                          <div class="card-header">
                              <h5 class="card-title">Form Validation</h5>
                          </div>
                          <div class="card-body">
                              <h6 class="card-subtitle">Basic form validation.</h6>
                              <form class="form-validate" action="/update/<%= user._id %>" method="post">
                                  <!-- BOOK TITLE -->
                                  <div class="form-group row">
                                      <label class="col-lg-3 col-form-label" for="val-username">Title <span class="text-danger">*</span></label>
                                      <div class="col-lg-6">
                                          <input type="text" class="form-control" id="title" name="title" value="<%= user.title %>" placeholder="Please Enter Book Title">
                                      </div>
                                  </div>
                                  <!-- BOOK TYPE -->
                                  <div class="form-group row">
                                      <label class="col-lg-3 col-form-label" for="book_type">Book Type <span class="text-danger">*</span></label>
                                      <div class="col-lg-6">
                                          <select class="form-control" id="book_type" name="book_type" value="<%= user.book_type %>">
                                              <option value="">Please select Book</option>
                                              <option value="Magazine">Magazine</option>
                                              <option value="Animation">Animation</option>
                                              <option value="teaching aids">Teaching aids</option>
                                              <option value="Fantasy">Fantasy</option>
                                              <option value="Romance">Romance</option>
                                              <option value="Horror">Horror</option>
                                          </select>
                                      </div>
                                  </div>
                                  <!-- BOOK STOCK -->
                                  <div class="form-group row">
                                      <label class="col-lg-3 col-form-label" for="stock">Stock <span class="text-danger">*</span></label>
                                      <div class="col-lg-6">
                                          <input type="text" class="form-control" id="stock" name="stock" value="<%= user.stock %>" placeholder="100 Peace">
                                      </div>
                                  </div>
                                  <!-- BOOK PRICE -->
                                  <div class="form-group row">
                                      <label class="col-lg-3 col-form-label" for="val-currency">Currency <span class="text-danger">*</span></label>
                                      <div class="col-lg-6">
                                          <input type="text" class="form-control" id="val_currency" name="val_currency" value="<%= user.val_currency %>" placeholder="₹230">
                                      </div>
                                  </div>
                                  <!-- BOOK AUTHOR -->
                                  <div class="form-group row">
                                      <label class="col-lg-3 col-form-label" for="val-username">Name of an author <span class="text-danger">*</span></label>
                                      <div class="col-lg-6">
                                          <input type="text" class="form-control" id="author" name="author" value="<%= user.author %>" placeholder="Please Enter Author Name">
                                      </div>
                                  </div>
                                  <!-- SUBMIT BUTTON -->
                                  <div class="form-group row">
                                      <label class="col-lg-3 col-form-label"></label>
                                      <div class="col-lg-8">
                                          <button type="submit" class="btn btn-primary">Submit</button>
                                      </div>
                                  </div>                                  
                              </form>
                          </div>
                      </div>
                  </div>
                  <!-- End col -->
              </div>
              <!-- End row -->
          </div>
          <!-- End Contentbar -->
          <!-- Start Footerbar -->
          <div class="footerbar">
              <footer class="footer">
                  <p class="mb-0">© 2020 Theta - All Rights Reserved.</p>
              </footer>
          </div>
          <!-- End Footerbar -->
      </div>
      <!-- End Rightbar -->
  </div>
  <!-- End Containerbar -->
  <!-- Start js -->        
  <script src="/js/jquery.min.js"></script>
