  <script src="/plugins/validatejs/validate.min.js"></script>
  <!-- Validate js -->
  <script src="/js/custom/custom-validate.js"></script>
  <script src="/js/custom/custom-form-validation.js"></script>
  <!-- Core js -->
  <!-- <script src="/js/core.js"></script> -->
  <!-- End js -->

</body></html>